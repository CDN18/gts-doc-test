{{- with .Account }}
<a href="{{- .URL -}}">
    <img class="avatar" src="{{- .Avatar -}}" alt="">
    <span aria-hidden="true" class="displayname">
        {{- if .DisplayName -}}
        {{- emojify .Emojis (escape .DisplayName) -}}
        {{- else -}}
        {{- .Username -}}
        {{- end -}}
    </span>
    <span aria-hidden="true" class="username">@{{- .Username -}}</span>
    <span class="sr-only">
        {{- if .DisplayName -}}
        {{- emojify .Emojis (escape .DisplayName) -}}. Username: @{{- .Acct -}}.
        {{- else -}}
        @{{- .Acct -}}.
        {{- end -}}
    </span>
</a>
{{- end }}